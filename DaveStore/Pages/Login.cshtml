@page
@model DaveStore.Pages.LoginModel

<div class="text-center mb-5">
    <h1>Sign in to an account</h1>
</div>
<div class="row w-100">
    <div class="col shadow rounded">
        <form class="container p-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row row-cols-1 text-center row-cols-sm-2">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="LoginViewModel.Email" class="form-control" placeholder="name@example.com"/>
                        <label asp-for="LoginViewModel.Email">Email</label>
                        <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="LoginViewModel.Password" class="form-control" placeholder="********"/>
                        <label asp-for="LoginViewModel.Password">Password</label>
                        <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row text-center">
                <div class="col">
                    <div class="mb-3">
                        <input asp-for="LoginViewModel.RememberMe" class="form-check-input" placeholder="********"/>
                        <label asp-for="LoginViewModel.RememberMe" class="form-check-label"> Stay signed in</label>
                    </div>
                </div>
            </div>
            <div class="row text-center">
                <div class="col">
                    <div class="mb-3">
                        <input type="submit" class="btn btn-primary p-2 w-25" value="Sign In"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>