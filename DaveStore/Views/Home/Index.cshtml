@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselBannerMainPage" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselBannerMainPage" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselBannerMainPage" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselBannerMainPage" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/assets/rtx4090banner.jpg"  class="d-block w-100" alt="..."/>
            <div class="carousel-caption d-none d-md-block">
                <h5>RTX 4090</h5>
                <button class="btn">BUY NOW</button>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/assets/rx7900xtxbanner.jpg" class="d-block w-100" alt="..."/>
            <div class="carousel-caption d-none d-md-block">
                <h5>RX 7900 XTX</h5>
                <button class="btn">BUY NOW</button>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/assets/intel13thgen.jpg" class="d-block w-100" alt="..." />
            <div class="carousel-caption d-none d-md-block">
                <h5>Intel Core 13th Gen</h5>
                <button class="btn">BUY NOW</button>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselBannerMainPage" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselBannerMainPage" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>